@import 'nib'
@import 'nib/vendor'

//vendor-prefixes = moz webkit ms official

body
	background-color black
input
	outline none

.displayFlex
	display flex

.container
	position relative
	transform scale(0.6)

.parteUno, .parteDos
	display flex
	justify-content center
.btnPower
	margin-bottom 20px
	align-self flex-end
	width 1em
	height 1em
	border-radius 50%
	background-color white
	position relative

.apagado
	&:before
		content ""
		display block
		width 5px
		height 5px
		border-radius 50%
		background-color red
		position absolute
		top -15px
		right 5px
.encendido
	&:before
		content ""
		display block
		width 5px
		height 5px
		border-radius 50%
		background-color green
		position absolute
		top -15px
		right 5px




.noSignal, .withSignal
	display flex
	justify-content center
	align-items center
	&:before
		color white
		font-weight bold
		font-size 70px

.noSignal
	&:before
		content "Sin Señal"

.withSignal
	&:before
		content " Señal"

.monitor
	width 400px
	border-radius 10px
	height 250px
	border 20px solid white
	display flex
	//justify-content flex-end
	margin 0 auto
.btnPowerMonitor
	align-self flex-end
	width 1em
	height 1em
	border-radius 50%
	margin-top -1em
	-webkit-appearance none
	background-color red
	position absolute
	margin-left 21px
	bottom 160px
	right 110px
	&:checked
		background-color green

.baseH
	width 100px
	height 50px
	background-color white
	margin 0 auto
.baseV
	width 200px
	height 10px
	background-color white
	margin 0 auto

.torre
	width 200px
	height 400px
	border-radius 10px
	border 1px solid white
	.casetera
		height 30%
		width 100%
		border-bottom 1px solid white
		display flex
		justify-content center
		align-items center
		.cd
			width 80%
			height 50%
			border 1px solid white
			border-radius 5px
	.poder
		height 70%
		width 100%
		display flex
		justify-content center

.conectorEnergia, .conectorImagen
	-webkit-appearance: none
	background-color: white
	&:checked
		transform: translateX(-11px);

.conectorImagen
	background-color blue
	height 40px
	width 50px
	position absolute
	right:-65px
	top 82px
	&:before
		content ""
		display block
		background-color gray
		height 70%
		width 10px
		margin 11% 0
		transform translateX(-10px)

.conectorEnergia
	width 60px
	height 40px
	align-self center
	&:before
		margin-top 10%
		content ""
		display block
		width 30px
		height 5px
		background-color white
		transform translateX(-15px)
	&:after
		margin-top 30%
		content ""
		display block
		width 30px
		height 5px
		background-color white
		transform translateX(-15px)

.mouse
	width 50px
	height 100px
	background-color white
	border-radius 20px
	display flex
	justify-content center
	.button
		margin-top 20px
		width 10px
		height 10px
		border-radius 50%
		background-color black

.teclado
	width 300px
	height 70px
	background-color white
	.teclas
		list-style none
		width 95%
		height 8%
		//background-color black
		margin 0 auto
		margin-bottom 5px
		display flex
		background-color black
		&:first-child
			margin-top 10px

