body
	background-color black
.container
	width 680px
	margin 0px auto
	position relative
	transform scale(0.6)
.parteUno
	display flex
	justify-content center
.btnPower
	margin-bottom 20px
	align-self flex-end
	width 1em
	height 1em
	border-radius 50%
	background-color white

.monitor
	width 400px
	border-radius 10px
	height 250px
	border 20px solid white
	display flex
	justify-content flex-end
	margin 0 auto
	.btnPower
		background-color white
		margin-top -1em
		margin-bottom 0
.baseH
	width 100px
	height 50px
	background-color white
	margin 0 auto
.baseV
	width 200px
	height 10px
	background-color white
	margin 0 auto

.torre
	width 200px
	height 400px
	border-radius 10px
	border 1px solid white
	.casetera
		height 30%
		width 100%
		border-bottom 1px solid white
		display flex
		justify-content center
		align-items center
		.cd
			width 80%
			height 50%
			border 1px solid white
			border-radius 5px


	.poder
		height 70%
		width 100%
		display flex
		justify-content center

.mouse
	width 50px
	height 100px
	background-color white
	border-radius 20px
	display flex
	justify-content center
	.button
		margin-top 20px
		width 10px
		height 10px
		border-radius 50%
		background-color black

.teclado
	width 300px
	height 70px
	background-color white
	.teclas
		list-style none
		width 95%
		height 5%
		background-color black
		margin 0 auto
		margin-bottom 5px
		&:first-child
			margin-top 10px

